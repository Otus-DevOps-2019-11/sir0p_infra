 {
    "variables": {
        "gcp_project_id": "",
        "gcp_source_image_family": "",
        "gcp_zone": "",
        "gcp_ssh_username": "",
        "gcp_machine_type": ""
        },
   "builders": [
        {
        "type": "googlecompute",
        "project_id": "{{user `gcp_project_id`}}",
        "image_name": "reddit-full-{{timestamp}}",
        "image_family": "reddit-full",
        "source_image_family": "reddit-base",
        "zone": "{{user `gcp_zone`}}",
        "ssh_username": "{{user `gcp_ssh_username`}}",
        "machine_type": "{{user `gcp_machine_type`}}",
        "disk_size": "{{user `gcp_disk_size`}}",
        "disk_type": "{{user `gcp_disk_type`}}",
        "tags": "{{user `gcp_tags`}}",
        "network": "{{user `gcp_network`}}",
        "image_description": "{{user `gcp_image_description`}}"
        }
    ],
  "provisioners": [
       {
        "type": "file",
        "source": "ansible/files/puma.service",
        "destination": "/tmp/puma.service"
        },
        {
            "type": "shell",
            "script": "config-scripts/deploy.sh",
            "execute_command": "sudo {{.Path}}"
            }
    ]
 }
