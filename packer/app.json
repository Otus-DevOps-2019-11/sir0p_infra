 {
    "variables": {
        "gcp_project_id": "",
        "gcp_source_image_family": "",
        "gcp_zone": "",
        "gcp_ssh_username": "",
        "gcp_machine_type": ""
        },
   "builders": [
        {
        "type": "googlecompute",
        "project_id": "{{user `gcp_project_id`}}",
        "image_name": "reddit-app-{{timestamp}}",
        "image_family": "reddit-app",
